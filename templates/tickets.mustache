{{!
    @template block_ludifica/tickets

    This template renders the template content area for a resource.

    Example context (json):
    {
        "tickets": [],
        "baseurl": "https://moodle_wwwroot_url"
    }
}}

<div id="tickets-list">
{{#tickets}}
    <div class="card mb-6 oneticket">
        <h3 class="card-header">{{name}}</h3>
            <div class="card-body">
                <div class="picture-box">
                    <img src="{{avatarurl}}" alt="{{fullname}}" />
                </div>
                <div class="info-box">
                    <h2></h2>
                    <p>
                        {{description}}
                    </p>
                    <p><strong>{{#str}} available, block_ludifica {{/str}}</strong> {{available}}</p>
                    <p><strong>{{#str}} availabledate, block_ludifica {{/str}}</strong> {{availabledateformated}}</p>
                    <p><strong>{{#str}} requiretext, block_ludifica {{/str}}</strong> {{requiretext}}</p>
                    <p><strong>{{#str}} cost, block_ludifica {{/str}}</strong> {{cost}}</p>
                </div>
            </div>
            <div class="card-footer">
                {{#enabled}}
                    <button type="button" class="btn btn-primary">{{#str}} buy, block_ludifica {{/str}}</button>
                {{/enabled}}
                {{^enabled}}
                    {{notenabledtext}}
                {{/enabled}}
            </div>
        </div>
    </div>

{{/tickets}}
</div>
